{
  "builders": [{
    "type": "virtualbox-iso",
    "headless": false,
    "boot_command": [
      "<tab> text ks=https://raw.githubusercontent.com/geerlingguy/packer-centos-7/master/http/ks.cfg<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": 40520,
    "guest_os_type": "RedHat_64",
    "http_directory": "http",
    "iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb",
    "iso_checksum_type": "sha1",
    "iso_url": "https://archive.kernel.org/centos-vault/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",
    "ssh_pty": true,
    "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "vboxmanage": [
      [ "modifyvm", "{{.Name}}", "--memory", "512" ],
      [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
      [ "modifyvm", "{{.Name}}", "--natnet1", "192.168/16" ]
    ]
  }],
  "provisioners": [{
      "type": "shell",
      "script": "scripts/base.sh",
      "expect_disconnect": true,
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo -E -S sh '{{.Path}}'"
    },
    {
      "pause_before": "20s",
      "type": "shell",
      "scripts": [
        "scripts/user.sh",
        "scripts/vboxguest.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
        ],
        "execute_command": "echo 'vagrant'| {{.Vars}} sudo -E -S sh '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
          "scripts/provision.sh"
      ],
      "execute_command": "/bin/bash --login '{{.Path}}'"
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "output": "centos-7-x64-default.box"
  }]
}
